{
  "manifest_version": 2,
  "name": "Youtube Alarm Clock",
  "version": "1.0",
  "description": "An alarm that plays a youtube video at specific time.",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/iframe_api.js", "js/www-widgetapi.js"]
  }],
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
	  "alarms",
    "storage",
    "http://*/",
    "https://*/"
  ]
}