{
  "manifest_version": 2,
  "name": "Youtube Alarm Clock",
  "short_name": "YAC",
  "version": "1.1.0",
  "description": "Plays a youtube video at specific time.",
  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/iframe_api.js", "js/www-widgetapi.js"]
  }],

  "background": {
    "scripts": ["js/background.js"]
  },
  
  "permissions": [
	  "alarms",
    "storage",
    "http://*/",
    "https://*/"
  ]
}